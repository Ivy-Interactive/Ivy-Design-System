{
  "name": "ivy-design-system",
  "version": "1.1.12",
  "description": "Modular multi-product token-based design system for Ivy products",
  "type": "module",
  "main": "dist/js/index.js",
  "types": "dist/js/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/js/index.d.ts",
      "default": "./dist/js/index.js"
    },
    "./css/ivy-framework": "./dist/css/ivy-framework.css",
    "./css/ivy-framework-flat": "./dist/css/ivy-framework-flat.css",
    "./css/ivy-web": "./dist/css/ivy-web-light.css",
    "./css/ivy-web-light": "./dist/css/ivy-web-light.css",
    "./css/ivy-web-dark": "./dist/css/ivy-web-dark.css",
    "./css/ivy-web-dark-flat": "./dist/css/ivy-web-dark-flat.css",
    "./css/light": "./dist/css/light.css",
    "./css/dark": "./dist/css/dark.css",
    "./css/dark-flat": "./dist/css/dark-flat.css",
    "./tailwind/ivy-framework": "./dist/tailwind/ivy-framework.js",
    "./tokens": "./dist/tokens/index.json",
    "./csharp/ivy-framework": "./dist/csharp/IvyFrameworkTokens.cs",
    "./csharp/ivy-web": "./dist/csharp/IvyWebSourceTokens.cs",
    "./csharp/ivy-web-light": "./dist/csharp/IvyWebLightThemeTokens.cs",
    "./csharp/ivy-web-dark": "./dist/csharp/IvyWebDarkThemeTokens.cs",
    "./csharp/light": "./dist/csharp/LightThemeTokens.cs",
    "./csharp/dark": "./dist/csharp/DarkThemeTokens.cs"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsx scripts/build.ts",
    "dev": "tsx scripts/build.ts --watch",
    "clean": "rm -rf dist",
    "sync-version": "tsx scripts/sync-version.ts",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui"
  },
  "keywords": [
    "design-tokens",
    "design-system",
    "tailwind",
    "css-variables",
    "ivy",
    "tokens"
  ],
  "author": "Ivy Interactive",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Ivy-Interactive/Ivy-Design-System.git"
  },
  "homepage": "https://github.com/Ivy-Interactive/Ivy-Design-System#readme",
  "bugs": {
    "url": "https://github.com/Ivy-Interactive/Ivy-Design-System/issues"
  },
  "devDependencies": {
    "@vitest/ui": "^4.0.10",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^4.0.10"
  }
}
